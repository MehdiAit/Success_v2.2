<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logoEtape1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dip"
        android:src="@drawable/logo_reserv_step1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/logoEtape2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dip"
        android:src="@drawable/logo_reserv_step2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/logoEtape3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dip"
        android:src="@drawable/logo_reserv_step3"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titleActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dip"
        android:textColor="@color/title_color"
        android:text="Création de la réservation"
        android:textSize="18sp" />

</LinearLayout>