<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/round_corner_layout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtMarqueSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="Marque"
            android:textSize="18sp" />

        <MultiAutoCompleteTextView
            android:id="@+id/autoMarqueSearch"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/roundcorner"
            android:ems="10"
            android:gravity="center_horizontal"
            android:text="autoMarqueSearch"
            android:textSize="17sp" >

            <requestFocus />
        </MultiAutoCompleteTextView>

        <TextView
            android:id="@+id/txtModeleSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="Modele"
            android:textSize="18sp" />

        <MultiAutoCompleteTextView
            android:id="@+id/autoModeleSearch"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/roundcorner"
            android:ems="10"
            android:gravity="center_horizontal"
            android:text="autoModeleSearch"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtCouleurSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="Couleur"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinCouleurSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtMotorSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="Motorisation"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdioMotorSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

        <Button
            android:id="@+id/btnLaunchSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#94181A"
            android:drawableEnd="@drawable/right_arrow"
            android:text="Rechercher"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>